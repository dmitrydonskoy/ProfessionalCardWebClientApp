@model IEnumerable<ProfessionalCardWebClientApp.DTO.ProfessionDTO>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Категория</th>
            <th>Уровень</th>
            <th class="text-center">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prof in Model)
        {
            <tr>
                <td>@prof.Id</td>
                <td>@prof.Name</td>
                <td>@prof.Category</td>
                <td>@prof.Level</td>
                <td class="text-center">
                    <form method="post" asp-action="DeleteProfession" class="d-inline">
                        <input type="hidden" name="id" value="@prof.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>