@using ProfessionalCardWebClientApp.DTO;
@model List<SkillDTO>
@{
    ViewData["Title"] = "Управление навыками";
}

<h2>Навыки</h2>

<form method="post" asp-action="AddSkill">
    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" name="Name" class="form-control" placeholder="Название навыка" required />
        </div>
        <div class="col-md-4">
            <input type="text" name="Category" class="form-control" placeholder="Категория" required />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-success">Добавить</button>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Категория</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var skill in Model)
        {
            <tr>
                <td>@skill.Name</td>
                <td>@skill.Category</td>
                <td>
                    <form method="post" asp-action="DeleteSkill">
                        <input type="hidden" name="id" value="@skill.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>